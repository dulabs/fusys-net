<div class="ui grid">
    <div class="computer tablet only row">
        <div class="ui large menu borderless fixed">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="brand item">Project Name</a>
           
            @if (User.IsInRole("Administrator"))
            {
                <div class="ui simple dropdown item">
                    Administration
                    <i class="dropdown icon"></i>
                    <div class="secondary  menu">                    
                            <a asp-area="" asp-controller="Users" asp-action="Index" class="item">Users</a>
                            <a asp-area="" asp-controller="Roles" asp-action="Index" class="item">Roles</a>
                            <div class="item">Audit Logs</div>
                            <div class="ui divider"></div>
                            <a class="item">Settings</a>

                    </div>
                </div>
            }
            <div class="right menu">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="javascript:void(0);" class="item">
                        <i class="user icon"></i>
                        &nbsp;@User.Identity.Name
                    </a>
                    <a href="@Url.Action("LogOff","Account")" class="item">
                        Logout
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Login","Account")" class="item">
                        <i class="user icon"></i>
                        &nbsp;Login
                    </a>
                }
               
            </div>
        </div>
    </div>
    <div class="mobile only row">
        <div class="ui fixed vnavbar menu">
            <a href="" class="brand item">Project Name</a>
            <div class="right menu open">
                <a href="" class="menu item">
                    <i class="content icon"></i>
                </a>
            </div>
        </div>
